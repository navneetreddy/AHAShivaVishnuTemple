<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/navneetFragmentFrameLayout"
    tools:context="com.example.navneetreddy.ahashivavishnutemple.AboutDeveloperFragment" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/navneetFragmentLinearLayout" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10" >

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="4"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:background="@color/transparent"
                android:id="@+id/navneetPicture"
                android:contentDescription="@string/navneet_picture" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="6"
                android:background="@drawable/rounded_corners" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/navneetName"
                    android:text="@string/navneet_reddy"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/navneetDegree"
                    android:text="@string/degree"
                    android:textSize="@dimen/text_size_developer_page" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/navneetSchool"
                    android:text="@string/school"
                    android:textSize="@dimen/text_size_developer_page" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="9dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/navneetLinkedIn"
                    android:text="@string/linkedin_navneet"
                    android:autoLink="web"
                    android:textSize="@dimen/text_size_developer_page" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/navneetGitHub"
                    android:text="@string/github_navneet"
                    android:autoLink="web"
                    android:textSize="@dimen/text_size_developer_page" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_corners" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/navneetAbout"
                android:text="@string/about_navneet" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:id="@+id/navneetDescription" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent" >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:background="@drawable/rounded_corners"
                android:id="@+id/navneetEmailButton"
                android:text="@string/email_navneet" />

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/navneetExpandedImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="10dp"
        android:visibility="invisible"
        android:contentDescription="@string/expanded_image" />

</FrameLayout>