<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:outline="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    tools:context="com.example.navneetreddy.ahashivavishnutemple.HomePageFragment" >

    <com.example.navneetreddy.ahashivavishnutemple.OutlineTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        android:text="@string/welcome"
        android:id="@+id/homePageWelcome"
        outline:strokeColor="@color/white"
        outline:strokeJoinStyle="miter"
        outline:strokeWidth="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corners"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The current app is in development.\n\nPlease use the slide out navigation drawer on the left side of the page or the icon at the top left to navigate to the currently implemented features of this app.\n\n"/>

    </LinearLayout>

</LinearLayout>